%section
  .container
    .row
      .col-med-10-md-offset-1
        = bootstrap_form_for [@entry], html: {class: "form-horizontal"} do |f|
          %fieldset
            = f.text_field :artist
            = f.text_field :album
            = f.text_field :song
          %fieldset.actions.form-group
            .col-sm-6.col-md-offset-3
              = f.submit(@entry.new_record? ? 'Add Song' : 'Update Song', class: 'btn btn-default center-block')
-#
              %input(type="submit" value="Add Song" class="btn btn-default center-block")
